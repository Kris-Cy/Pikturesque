<?xml version="1.0" encoding="utf-8"?>

<!--A coordinator layout must be used for relative layouts, I think...-->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--This is the whole page... I named it wrong.-->
<RelativeLayout
    android:id="@+id/RelativeLayoutAccountSettingsLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- This is the label itself-->
    <TextView
        android:id="@+id/tvAccountSettingsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/border_grey"
        android:gravity="center_horizontal"
        android:text="Account Settings"
        android:textColor="@color/black"
        android:textSize="45dp"/>

    <!--This is the list view of options on this page.-->
    <ListView
        android:id="@+id/lvAccountSettingsOptions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvAccountSettingsLabel"></ListView>

</RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>