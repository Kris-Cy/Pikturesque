<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape
            android:shape="rectangle"
            android:color="@color/grey">
        </shape>
    </item>
    <item
        android:bottom="-45dp"
        android:left="25dp"
        android:width="360dp">
        <shape
            android:shape="line"
            >
            <stroke
                android:width="3dp"
                android:color="@color/grey"></stroke>
            <solid
                android:color="@color/white"></solid>
        </shape>
    </item>



</layer-list>